# ==========================================================================
# dtb rule
# ==========================================================================

########################################
# Always build                         #
########################################

dtb 		+= $(dtb-y)
dtb-always	+= $(dtb-y)

########################################
# Sort files                           #
########################################

dtb := $(sort $(dtb))

########################################
# Add path                             #
########################################

dtb := $(addprefix $(obj)/,$(dtb))
dtb-always	:= $(addprefix $(obj)/,$(dtb-always))

dtb-targets		+= $(dtb)
targets			+= $(dtb-targets)

########################################
# Always rule                          #
########################################

always-y	+= $(dtb-always)

########################################
# clean rule                           #
########################################

clean-files += $(dtb-targets)
clean-subdir += $()
 
